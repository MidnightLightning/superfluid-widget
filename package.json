{
  "name": "superfluid-checkout",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "changeset": "changeset",
    "changeset:release": "pnpm build && changeset publish",
    "changeset:version": "changeset version && pnpm install --lockfile-only",
    "clean": "npm-run-all -p clean:*",
    "clean:next": "rimraf --glob './**/.next'",
    "clean:node-modules": "rimraf --glob '**/node_modules'",
    "clean:dist": "rimraf --glob './**/dist'",
    "dev": "turbo run dev",
    "dev:main": "turbo run dev --filter=!./examples/*",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "prepare": "husky install",
    "sort-package-jsons": "npx sort-package-json \"**/package.json\" \"!**/node_modules/**\" --check"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "pnpm format",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@changesets/cli": "^2.26.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.1"
  },
  "devDependencies": {
    "eslint": "^8.43.0",
    "eslint-config-custom": "workspace:*",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^2.8.8",
    "turbo": "^1.10.6",
    "typescript": "^5.1.5"
  },
  "packageManager": "pnpm@8.6.1",
  "pnpm": {
    "overrides": {
      "react-hook-form": "7.44.3"
    }
  }
}
