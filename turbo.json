{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NEXT_PUBLIC_GOOGLE_FONTS_API_KEY"],
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "clean": {
      "cache": false
    },
    "clean:build": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
